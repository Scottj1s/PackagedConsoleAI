<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    
    <PropertyGroup>
        <!--Enable Single-Project MSIX packaging and deployment support-->
        <EnableMSIXTooling>true</EnableMSIXTooling>
        <!--Not using any XAML runtime-->
        <DefaultXamlRuntime>None</DefaultXamlRuntime>
        <!--No metadata generated by this project-->
        <CppWinRTGenerateWindowsMetadata>false</CppWinRTGenerateWindowsMetadata>
    </PropertyGroup>

    <ItemGroup>
        <!--Add CRT framework dependencies--> 
        <SDKReference Include="Microsoft.VCLibs, Version=14.0" />
        <SDKReference Include="Microsoft.VCLibs.Desktop, Version=14.0" />
        <SDKReference Include="Microsoft.UniversalCRT.Debug, Version=$(TargetPlatformVersion)" Condition="'$(Configuration)' == 'Debug'" />
    </ItemGroup>

    <ItemGroup>
        <!--Add Semantic Search references-->
        <Reference Include="packages\Microsoft.Experimental.AppContentIndexerPreview.1.8.130-experimental-g62fe9f579a\lib\uap10.0\Microsoft.Windows.AI.Search.winmd">
            <Implementation>Microsoft.Windows.AI.Search.Experimental.dll</Implementation>
        </Reference>
    </ItemGroup>

</Project>